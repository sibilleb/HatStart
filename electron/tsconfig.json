{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "../dist-electron",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "../src/shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../src/components",
    "../src/assets",
    "../dist",
    "../dist-electron"
  ]
} 